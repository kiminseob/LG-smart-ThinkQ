<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:background= "@android:color/transparent">

    <!--  습도버튼(누르면 앱 메인실행) -->
    <Button
        android:id="@+id/appwidget_text"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/drop_c"
        android:fontFamily="@font/hoonsaemaulundongr"
        android:textColor="#7070D6"
        android:textSize="25sp"
        android:textStyle="bold" />




    <!--  온도출력 -->
    <TextView
        android:id="@+id/appwidget_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/appwidget_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"

        android:fontFamily="@font/hoonsaemaulundongr"
        android:textColor="#FF0000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="25dp"
        android:layout_height="28dp"
        android:padding="0dp"
        android:layout_marginTop="35dp"
        android:layout_toLeftOf="@+id/appwidget_text3"
        android:layout_toStartOf="@+id/appwidget_text3"
        android:background="@drawable/temperature" />

</RelativeLayout>